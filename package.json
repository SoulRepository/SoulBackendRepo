{
  "name": "blaize-soul-search-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "bin": {
    "soulctl": "dist/cli/cli/src/main.js"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:cli": "tsc -p ./cli/tsconfig.cli.json",
    "format": "prettier --write \"src/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test,cli}/**/*.ts\" --fix",
    "test": "node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register node_modules/.bin/typeorm -d src/database/datasource.ts",
    "typeorm-without-config": "ts-node -r tsconfig-paths/register node_modules/.bin/typeorm",
    "tools:create-database": "node -r tsconfig-paths/register -r ts-node/register tools/createDatabase.ts",
    "migrations:generate": "scripty",
    "migrations:create": "scripty",
    "migrations:run": "npm run typeorm migration:run",
    "migrations:revert": "npm run typeorm migration:revert",
    "migrations:prod": "node dist/tools/createDatabase.js && node node_modules/.bin/typeorm -d dist/src/database/datasource.js migration:run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.282.0",
    "@aws-sdk/s3-presigned-post": "^3.282.0",
    "@aws-sdk/s3-request-presigner": "^3.282.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@types/lodash.keyby": "^4.6.7",
    "@types/passport-discord": "^0.1.6",
    "@types/passport-instagram": "^1.0.2",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "ethers": "^6.2.0",
    "got": "^11.8.6",
    "lodash.keyby": "^4.6.0",
    "nest-commander": "^3.6.1",
    "passport": "^0.6.0",
    "passport-discord": "^0.1.4",
    "passport-instagram": "^1.0.0",
    "passport-instagram-basic-api": "^1.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.9.0",
    "pg-connection-string": "^2.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "scripty": "^2.1.1",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@graphprotocol/client-cli": "^2.2.19",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@common/config(|/.*)$": "<rootDir>/libs/config/src/$1"
    }
  }
}
